<div id="<%= dom_id target %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= target.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Program url:</strong>
    <%= target.program_url %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this target", target, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this target", edit_target_path(target), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
